/* pages/login/login.wxss */

.login-page {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0 0;
  box-sizing: border-box;
}

.login-top-text {
  position: relative;
  margin-top: 5%;
  width: 37px;
  height: 26px;
  line-height: 26px;
  color: rgba(16, 16, 16, 1);
  font-size: 18px;
  text-align: center;
  font-family: Arial;
}

.login-border {
  position: relative;
  margin: 0 auto;
  width: 80%;
  height: 70%;
  line-height: 20px;
  border-radius: 10px;
  text-align: center;
  box-shadow: 0px 0px 20px 0px rgba(170, 170, 170, 1);
  border: 1px solid rgba(187, 187, 187, 1);
  padding-bottom: 7%;
}

.login-middle-ico {
  position: relative;
  top: 30px;
  width: 90px;
  height: 90px;
  border-radius: 50%;
}

.login-input {
  position: relative;
  margin: 0 auto;
  top: 40px;
  margin-top: 20px;
  width: 60%;
  height: 10%;
  line-height: 10%;
  opacity: 0.5;
  border-radius: 20px;
  font-size: 14px;
  text-align: left;
  padding-left: 40px;
  border: 1px solid rgba(187, 187, 187, 1);
}

.login-button {
  position: relative;
  top: 70px;
  width: 208px;
  height: 12%;
  border-radius: 20px;
  vertical-align: middle;
  background-color: rgba(51, 54, 67, 1);
  text-align: center;
}

.login-forget{
  position: relative;
  top:50px;
  width: 60%;
  line-height: 20px;
  font-size: 12px;
  text-align: left;
  padding-left: 50px;
  color:grey;
}
